<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_forgot_password">

    <TextView
        android:id="@+id/txtFPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textSize="30sp"
        android:textColor="@color/TextColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="20dp">
    </TextView>

    <TextView
        android:id="@+id/subFPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter your email below to recevie\nyour password reset instructions"
        android:fontFamily="@font/montserrat_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtFPass"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp">
    </TextView>

    <TextView
        android:id="@+id/txtFPUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="@color/TextColor"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/subFPass"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent">
    </TextView>

    <EditText
        android:id="@+id/etFPUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your email"
        app:layout_constraintTop_toBottomOf="@id/txtFPUser"
        android:layout_marginHorizontal="20dp">
    </EditText>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Request"
        android:background="@drawable/button_red"
        app:layout_constraintTop_toBottomOf="@+id/etFPUser"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/white"
        android:onClick="postSendRequest">
    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>