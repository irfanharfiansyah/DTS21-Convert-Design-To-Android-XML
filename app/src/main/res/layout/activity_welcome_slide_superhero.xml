<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_welcome_slide_superhero">

    <ImageView
        android:id="@+id/superHero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_superhero"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp">
    </ImageView>

    <TextView
        android:id="@+id/titleSupHero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Work Happens"
        android:textSize="24sp"
        android:layout_marginTop="30dp"
        android:textColor="@color/TextColor"
        android:fontFamily="@font/montserrat_semi_bold"
        app:layout_constraintTop_toBottomOf="@+id/superHero"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </TextView>

    <TextView
        android:id="@+id/subSh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_light"
        android:text="Get notified when work happens."
        android:textColor="@color/TextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleSupHero">
    </TextView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_blue"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="clickGetStarted">
    </ImageView>

    <Button
        android:id="@+id/btn_gsSh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="@font/montserrat_light"
        android:text="@string/get_started"
        app:layout_constraintTop_toBottomOf="@+id/subSh"
        android:layout_marginTop="220dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/button_white"
        android:onClick="clickGetStarted">
    </Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btn_gsSh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="35dp"
        android:textSize="18sp"
        android:fontFamily="@font/montserrat_light"
        android:onClick="clickLogin">
    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>